<hibernate-configuration>

	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
				<property name="hibernate.default_schema">BERT</property>
		<property name="hibernate.connection.username">Bert</property>
		<property name="hibernate.connection.password">Circuit1</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
		<mapping resource="MainPackage/Employee.hbm.xml" />
		<mapping resource="MainPackage/DBUser.hbm.xml" />
	</session-factory>
</hibernate-configuration>
